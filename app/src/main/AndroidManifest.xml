<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.NutriApp"
        tools:targetApi="31">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/sign_up_login_label">
            <!-- Add any intent filters if necessary -->
        </activity>

        <activity
            android:name=".activities.HomeActivity"
            android:label="@string/home_label">
        </activity>

        <activity
            android:name=".activities.RegistrationActivity"
            android:label="@string/registration_label">
        </activity>

        <activity
            android:name=".activities.AddFoodActivity"
            android:label="@string/add_food_label">
        </activity>

        <activity
            android:name=".activities.ProfileActivity"
            android:label="@string/profile_label">
        </activity>

    </application>

</manifest>